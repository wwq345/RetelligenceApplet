<!--pages/TaskPages/taskPage.wxml-->
<scroll-view class="taskListView" enable-flex="true" scroll-y>
  <block wx:if="{{taskEmpty}}">
    <view class="noTaskBackground">
      <image src="../../statics/photos/noTask.png"></image>
      <text>当前无派发任务</text>
    </view>
  </block>
  <block wx:else>
    <view class="taskCardView" wx:for="{{taskArray}}" wx:key="*this">
      <view class="taskCardTopView" bindtap="showDetail">
        <image class="taskPhoto"src="../../statics/photos/dog.jpg"></image>
        <view class="taskCardText">
          <text class="taskTitle">Task {{item}} Title</text>
          <text class="taskAssignText">From Siren</text>
        </view>
      </view>
      <view class="taskCardBottom">
        <button class="uploadPictureButton" style="width: 300rpx;font-weight: 300;">Upload</button>
        <button class="assignTaskButton" style="width: 300rpx;font-weight: 300;" bindtap="navToAssignPage">Assign To</button>
      </view>
    </view>
  </block>
</scroll-view>
<view>
  <button class="add" style="width: 600rpx;font-weight: 300;" bindtap="onClick">上传任务</button>
</view>
