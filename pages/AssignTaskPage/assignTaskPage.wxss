/* pages/AssignTaskPage/assignTaskPage.wxss */

.assignTaskPage {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.asignee {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.selectedTextBox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-style: solid;
  border-width: 1rpx;
  border-color: rgba(91, 115, 139, 0.83);
  border-radius: 15rpx;
  margin-bottom: 40rpx;
}

.selectedText {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(34, 53, 72, 1);
  margin: 20rpx;
}

.downArrow {
  width: 30rpx;
  height: 30rpx;
  display: block;
  transition: transform 0.3s;
  margin-right: 20rpx;
}

.downArrow.Rotate {
  transform: rotate(180deg);
}

.selectList {
  
  width: 100%;
  box-sizing: border-box;
  border-top: 0;
  background: #fff;
  z-index: 100;
  text-align:center;
  transition: height 0.3s;
  overflow-y: auto;
}

.selectListItem {
  display: block;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  color: rgb(102, 102, 102);
  cursor: pointer;
}

.annotationView {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.annotationView image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.annotationInput {
  border-style: solid;
  border-width: 1rpx;
  border-color: rgba(91, 115, 139, 0.83);
  border-radius: 15rpx;
}

.assignButton {
  margin-top: 100rpx;
  background-color: #188918;
  color: white;
}