/* pages/AssignTaskPage/assignTaskPage.wxss */

.assignTaskPage {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.standard {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 80rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: rgba(91, 115, 139, 0.83);
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.standardText {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(34, 53, 72, 1);
  margin-left: 20rpx;
}

.asignee {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.annotationView {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.annotationView image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.annotationInput {
  border-style: solid;
  border-width: 1rpx;
  border-color: rgba(91, 115, 139, 0.83);
  border-radius: 15rpx;
}

.assignButton {
  margin-top: 100rpx;
  background-color: #188918;
  color: white;
}