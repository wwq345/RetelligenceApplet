/* Components/dropSelectList/dropSelectList.wxss */
.selectedTextBox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-style: solid;
  border-width: 1rpx;
  border-color: rgba(91, 115, 139, 0.83);
  border-radius: 15rpx;
  margin-bottom: 40rpx;
}

.selectedText {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(34, 53, 72, 1);
  margin: 20rpx;
}

.downArrow {
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-right: 20rpx;
}

.downArrowRotate {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  transition: transform 0.3s;
  transform: rotate(180deg);
}

.selectList {
  width: 100%;
  border-top: 0;
  background: #fff;
  z-index: 100;
  text-align:center;
  transition: height 0.3s;
  overflow-y: auto;
}

.selectListItem {
  display: block;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  color: rgb(102, 102, 102);
  cursor: pointer;
}